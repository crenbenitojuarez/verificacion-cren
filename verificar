<body>
    <div class="container" id="app">
        <div class="header">
            <h1>CREN "Benito Juárez"</h1>
            <p>Centro Regional de Educación Normal</p>
            <p>Pachuca, Hidalgo</p>
        </div>

        <div id="content">
            <!-- El contenido se cargará aquí con JavaScript -->
        </div>
    </div>

    <script>
        // Obtener parámetros de la URL
        function obtenerParametros() {
            const params = new URLSearchParams(window.location.search);
            return {
                folio: params.get('folio') || '',
                nombre: params.get('nombre') || '',
                rol: params.get('rol') || '',
                actividad: params.get('actividad') || '',
                fecha: params.get('fecha') || '',
                lugar: params.get('lugar') || ''
            };
        }

        // Decodificar texto (convierte + en espacios y decodifica)
        function decodificar(texto) {
            return decodeURIComponent(texto.replace(/\+/g, ' '));
        }

        // Mostrar los datos
        function mostrarDatos() {
            const datos = obtenerParametros();
            const contenido = document.getElementById('content');

            // Verificar si hay datos
            if (!datos.folio || !datos.nombre) {
                contenido.innerHTML = `
                    <div class="error">
                        <div class="error-icon">⚠️</div>
                        <h2>Datos Incompletos</h2>
                        <p>El código QR no contiene información válida.</p>
                        <p style="margin-top: 10px; font-size: 12px;">
                            Por favor, verifica que la constancia sea original.
                        </p>
                    </div>
                `;
                return;
            }

            // Mostrar datos válidos
            contenido.innerHTML = `
                <div class="status">
                    <div class="status-icon">✅</div>
                    <h2>Constancia Verificada</h2>
                    <p>Esta constancia ha sido emitida oficialmente</p>
                </div>

                <div class="data">
                    <div class="data-row">
                        <div class="data-label">Folio:</div>
                        <div class="data-value">${decodificar(datos.folio)}</div>
                    </div>
                    <div class="data-row">
                        <div class="data-label">Nombre:</div>
                        <div class="data-value">${decodificar(datos.nombre)}</div>
                    </div>
                    <div class="data-row">
                        <div class="data-label">Rol:</div>
                        <div class="data-value">${decodificar(datos.rol)}</div>
                    </div>
                    <div class="data-row">
                        <div class="data-label">Actividad:</div>
                        <div class="data-value">${decodificar(datos.actividad)}</div>
                    </div>
                    <div class="data-row">
                        <div class="data-label">Fecha:</div>
                        <div class="data-value">${decodificar(datos.fecha)}</div>
                    </div>
                    <div class="data-row">
                        <div class="data-label">Lugar:</div>
                        <div class="data-value">${decodificar(datos.lugar)}</div>
                    </div>
                </div>

                <div class="footer">
                    <p>
                        <strong>Constancia oficial emitida por:</strong><br>
                        Centro Regional de Educación Normal "Benito Juárez"<br>
                        Pachuca, Hidalgo, México
                    </p>
                </div>
            `;
        }

        // Ejecutar al cargar la página
        window.onload = mostrarDatos;
    </script>
</body>
</html>
